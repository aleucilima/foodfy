{% extends "layoutAdmin.njk" %}

{% block content %}
    <div class="manager-recipes">
      <h1>Gerenciar receitas</h1>
      <div class="grid-recipes">
      {% for recipe in recipes %}
        <div class="card-recipe">
            <img src={{ recipe.image_url }} alt={{ recipe.title }} class="img-recipe" />
            <div class="content-recipe">
              <h1>Triplo bacon burger</h1>
              <h2>por Jorge Relato</h2>
              <a href="/admin/recipes/{{ recipe.id }}">Visualizar</a>
            </div>
        </div>
      {% endfor %}
      </div>
    </div>
{% endblock content %}